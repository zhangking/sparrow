<project name="css-base.build" default="clean" basedir="../">
	<description>js.build for ANT</description>
	<property name="src" location="css/base" />
	<property name="build" location="build" />
	<property name="target" location="css" />
	<property name="lib" location="lib" />
	<property name="charset" value="utf-8" />

	<target name="init">
		<mkdir dir="${build}" />
	</target>

	<target name="concat" depends="init">
		<concat destfile="${build}/core.css" encoding="${charset}" outputencoding="${charset}">
			<path path="${src}/base.css" />
			<path path="${src}/buttons.css" />
			<path path="${src}/forms.css" />
			<path path="${src}/icons.css" />
			<path path="${src}/layouts.css" />
			<path path="${src}/tables.css" />
			<path path="${src}/utilities.css" />
		</concat>
		<replaceregexp match="@DEBUG@" replace="" flags="g" byline="true" file="${build}/core.css" encoding="${charset}" />
	</target>

	<target name="compress" depends="concat">
		<java jar="${lib}/yuicompressor-2.4.7.jar" fork="true">
			<arg line="--type css --charset utf-8 ${build}/core.css -o ${target}/tide-base.min.css" />
		</java>

	</target>

	<target name="clean" depends="compress">
		<delete dir="${build}" />
	</target>

</project>