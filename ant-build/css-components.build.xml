<project name="css-components.build" default="clean" basedir="../">
	<description>js.build for ANT</description>
	<property name="src" location="css/components" />
	<property name="build" location="build" />
	<property name="target" location="css" />
	<property name="lib" location="lib" />
	<property name="charset" value="utf-8" />

	<target name="init">
		<mkdir dir="${build}" />
	</target>

	<target name="concat" depends="init">
		<concat destfile="${build}/core.css" encoding="${charset}" outputencoding="${charset}">
			<path path="${src}/accordion.css" />
			<path path="${src}/alerts.css" />
			<path path="${src}/breadcrumbs.css" />
			<path path="${src}/carousel.css" />
			<path path="${src}/code.css" />
			<path path="${src}/dropdowns.css" />
			<path path="${src}/labels-badges.css" />
			<path path="${src}/modals.css" />
			<path path="${src}/navigation.css" />
			<path path="${src}/pagination.css" />
			<path path="${src}/popovers.css" />
			<path path="${src}/progress-bars.css" />
			<path path="${src}/thumbnails.css" />
			<path path="${src}/tooltip.css" />
		</concat>
		<replaceregexp match="@DEBUG@" replace="" flags="g" byline="true" file="${build}/core.css" encoding="${charset}" />
	</target>

	<target name="compress" depends="concat">
		<java jar="${lib}/yuicompressor-2.4.7.jar" fork="true">
			<arg line="--type css --charset utf-8 ${build}/core.css -o ${target}/tide-components.min.css" />
		</java>

	</target>

	<target name="clean" depends="compress">
		<delete dir="${build}" />
	</target>

</project>